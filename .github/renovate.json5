{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "timezone": "Asia/Tokyo",
  // allow to run on 0~9a.m every day
  "schedule": ["* 0-9 * * *"],
  "lockFileMaintenance": {
    "enabled": true
  },
  "enabledManagers": [
    "pep621"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "pep621"
      ],
      "rangeStrategy": "widen"
    }
  ],
  "labels": [
    "dependencies"
  ],
  "prHourlyLimit": 16
}
