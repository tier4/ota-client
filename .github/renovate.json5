{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  // allow sync_lockfile workflow to run without blocking renovate
  "gitIgnoredAuthors": [
    "github-actions[bot]+sync-lockfile@users.noreply.github.com"
  ],
  "timezone": "Asia/Tokyo",
  // allow to run on non-office hours every day.
  // note that it is NOT the schedule of renovate task dispatching,
  //  but the time window of allowing renovate to create PRs,
  //  see https://docs.renovatebot.com/configuration-options/#schedule
  "schedule": ["* 20-23,0-8 * * 1-5", "* * * * 0,6"],
  "lockFileMaintenance": {
    "enabled": true
  },
  "enabledManagers": [
    "pep621",
    "github-actions"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "pep621"
      ],
      "rangeStrategy": "widen"
    }
  ],
  "labels": [
    "dependencies"
  ],
  "vulnerabilityAlerts": {
    "labels": [
      "security",
      "dependencies"
    ]
  },
  "prHourlyLimit": 16
}
